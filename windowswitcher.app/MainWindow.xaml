<Window x:Class="windowswitcher.app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding Title}"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True">
    <Window.Background>
        <SolidColorBrush 
            Color="{x:Static SystemParameters.WindowGlassColor}"
            Opacity="0.95"/>
    </Window.Background>
    <Window.CommandBindings>
        <CommandBinding Command="Close" Executed="OnCloseExecuted" />
    </Window.CommandBindings>
    <Window.InputBindings>
        <KeyBinding Command="Close" Key="Esc" />
    </Window.InputBindings>
    <Grid Margin="128">
        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Button Command="{Binding Activate}" IsDefault="True">ACTIVATE</Button>
            <TextBox
                Name="txtSearch"
                FontSize="32"
                FontWeight="Light"
                BorderThickness="0"
                Background="{x:Static SystemColors.WindowFrameBrush}"
                Foreground="{x:Static SystemColors.WindowBrush}"
                Padding="2"
                Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>
        <ListView Grid.Row="1"
                  Padding="4"
                  ItemsSource="{Binding Windows}" 
                  SelectedItem="{Binding SelectedWindow}"
                  FontSize="16"
                  FontWeight="Regular"
                  SelectionMode="Single"
                  Background="{x:Static SystemColors.WindowBrush}"
                  Foreground="{x:Static SystemColors.WindowFrameBrush}"
                  DisplayMemberPath="Title">
        </ListView>
    </Grid>
</Window>